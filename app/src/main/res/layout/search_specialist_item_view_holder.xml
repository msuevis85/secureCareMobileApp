<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"

    android:elevation="8dp"
    app:cardCornerRadius="16dp"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardElevation="9dp"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:padding="8dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/specialist_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Dr. Sumaiya"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/medical_icon" />
                <TextView
                    android:id="@+id/medial_specialty_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="Skin Care"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_weight="1"
                    android:paddingLeft="8dp" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/appointment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/appointment_icon"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
